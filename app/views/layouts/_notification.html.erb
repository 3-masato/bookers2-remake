<% flash.each do |message_type, message| %>
  <% case message_type%>
  <% when "notice" %>
    <div class="alert alert-success my-2">
      <div class="font-weight-bold d-flex align-items-center">
        <i class="fa-regular fa-circle-check mr-2" style="font-size: 30px;"></i>
        <%= message %>
      </div>
    </div>
  <% when "alert" %>
    <div class="alert alert-warning my-2">
      <div class="font-weight-bold d-flex align-items-center">
        <i class="fa-solid fa-circle-exclamation mr-2" style="font-size: 30px;"></i>
        <%= message %>
      </div>
    </div>
  <% end %>
<% end %>
