<% fav_count = book.favorites.size %>
<% is_faved = book.favorited_by?(current_user) %>

<div class="favorite-body text-nowrap" data-faved="<%= is_faved %>">
  <% if is_faved %>
    <%= link_to book_favorites_path(book), method: :delete, remote: true, class: "favorite-body-btn" do %>
      <i class="fa-solid fa-heart" aria-hidden="true"></i>
      <span class="favorite-body-count"><%= fav_count %></span>
    <% end %>
  <% else %>
    <%= link_to book_favorites_path(book), method: :post, remote: true, class: "favorite-body-btn" do %>
      <i class="fa-regular fa-heart" aria-hidden="true"></i>
      <span class="favorite-body-count"><%= fav_count %></span>
    <% end %>
  <% end %>
</div>