<section class="mb-4">
  <h2><%= heading %></h2>
  <div class="form-body">
    <%= form_with model: user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "font-weight-bold" %>
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter your name" %>
      </div>

      <div class="form-group">
        <%= f.label :image, class: "font-weight-bold" %>
        <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, class: "font-weight-bold" %>
        <%= f.text_area :introduction, class: "form-control", rows: "3", placeholder: "Enter your self-introduction" %>
      </div>

      <% if action == :update %>
        <div class="form-group">
          <%= f.button :type => "submit", class: "btn btn-primary" do %>
            Update User
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</section>