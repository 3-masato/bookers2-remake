<% unless current_user == user %>
  <div>
    <% if current_user.following?(user) %>
      <%= link_to user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-danger btn-sm" do %>
        <span>Unfollow</span>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-primary btn-sm" do %>
        <span>Follow</span>
      <% end %>
    <% end %>
  </div>
<% end %>