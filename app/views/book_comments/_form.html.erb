<div class="form-body">
  <%= form_with model: [book, book_comment], local: false do |f| %>
    <div class="form-group">
      <%= f.text_area :comment, rows: 3, id: "comment-textarea", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Comment", class: "btn btn-info" %>
    </div>
  <% end %>
</div>