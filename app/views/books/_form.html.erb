<section class="mb-4">
  <h2><%= heading %></h2>
  <div class="form-body">
    <%= form_with model: book, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "font-weight-bold" %>
        <%= f.text_field :title, class: "form-control", placeholder: "enter the book title" %>
      </div>

      <div class="form-group">
        <%= f.label :opinion, class: "font-weight-bold" %>
        <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "enter the book opinion" %>
      </div>

      <% case action %>
      <% when :update %>
        <div class="form-group">
          <%= f.button :type => "submit", class: "btn btn-primary" do %>
            Update Book
          <% end %>
        </div>
      <% when :create %>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= yield %>
</section>