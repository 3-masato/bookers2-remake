<div class="d-flex justify-content-center align-items-center my-1">
  <% if user_signed_in? %>
    <div class="form-body">
      <%= form_with url: search_path, method: :get, local: true, class: "d-flex justify-content-center align-items-center flex-md-row flex-column" do |f| %>
        <%= f.text_field :content, class: "form-control form-control-sm mx-1 mb-2 mb-md-0" %>
        <%= f.select :target, options_for_select(search_target), {}, class: "form-control form-control-sm mx-1 mb-2 mb-md-0" %>
        <%= f.select :conditions, options_for_select(search_conditions), {}, class: "form-control form-control-sm mx-1 mb-2 mb-md-0" %>
        <%= f.button type: :submit, class: "btn btn-info btn-sm mx-1 text-nowrap" do %>
          <i class="fa-solid fa-magnifying-glass"></i> Search
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>